= simple_form_for @list_node, :html => { :class => 'form-horizontal' } do |f|
  = f.input :ancestry
  = f.input :ancestry_depth
  = f.input :position
  = f.input :listable_id
  = f.input :listable_type
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), list_nodes_path, :class => 'btn'
